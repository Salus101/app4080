<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Portfolio</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="assets/img/favicon.png" rel="icon">
  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Github Activity Plugin Dependencies -->
  <link rel="stylesheet" href="https://unpkg.com/octicons@4.4.0/build/font/octicons.css">
  <link rel="stylesheet" href="https://unpkg.com/github-activity-feed@latest/dist/github-activity.min.css">

  <!-- Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Mobile nav toggle button ======= -->
  <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

  <!-- ======= Header ======= -->
  <header id="header">
    <div class="d-flex flex-column">
      <!-- Displaying user data -->
      <% if (user) { %>
      <div class="profile">
        <% if (user && user.avatar_url && user.avatar_url.length > 0) { %>
          <img src="<%= user.avatar_url %>" alt="" class="img-fluid rounded-circle">
        <% } else { %>
          <img src="assets/img/diya5.jpg" alt="Default Avatar" class="img-fluid rounded-circle">
        <% } %>
        <h1 class="text-light"><%= user.displayName %></h1>
        <h1 class="text-white"><%= user.login %></h1>
        <div class="social-links mt-3 text-center">
          <a href="<%= user.html_url %>" class="twitter" target="_blank" rel="noopener noreferrer">
            <i class="bx bxl-github"></i> 
          </a>
          <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
          <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
          <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>       
          <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
        </div>
      </div>
      <% } else { %>
        <!-- Handle the case when user data is not available -->
        <p>No user data available.</p>
      <% } %>

       <!-- Themes Selector  -->
       <div class="theme-selector mt-3 text-center">
        <div class="dropdown">
          <button class="btn btn-light dropdown-toggle" type="button" id="themeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="bi bi-gear-fill"></span>
            Select Theme
          </button>
          <ul class="dropdown-menu" aria-labelledby="themeDropdown">
            <li><a class="dropdown-item" href="#" onclick="setTheme('light')">Light</a></li>
            <li><a class="dropdown-item" href="#" onclick="setTheme('pink')">Pink</a></li>
            <li><a class="dropdown-item" href="#" onclick="setTheme('blue')">Blue</a></li>
            <li><a class="dropdown-item" href="#" onclick="setTheme('green')">Green</a></li>
            <li><a class="dropdown-item" href="#" onclick="setTheme('dark')">Dark</a></li>
          </ul>
        </div>
      </div>

      <nav id="navbar" class="nav-menu navbar pt-1">
        <ul>
          <li><a href="#hero" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
          <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
          <li><a href="#portfolio" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Portfolio</span></a></li>
          <li><a href="#github-activity" class="nav-link scrollto"><i class="bi bi-github"></i> <span>GitHub Activity</span></a></li>
          <li><a href="#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>
          <li><a href="/logout" class="nav-link"><i class="bx bx-log-out-circle"></i> <span>Logout</span></a></li>
        </ul>
      </nav><!-- .nav-menu -->
    </div>
  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="hero-container" data-aos="fade-in">
      <h1><%= user.login %></h1>
      <p>I'm <span class="typed" data-typed-items="Designer, Developer"></span></p>
    </div>
  </section>
  <!-- End Hero -->

  <main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
      <div class="container">

        <div class="section-title">
          <h2>About</h2>
          <% if (user && user.bio) { %>
            <p><%= user.bio %></p>
          <% } else { %>
              <p>
                  Resolute young aspirant, currently in third year of university, studying Applied Computing Technology (APT) Motivated IT student with sales and assistant experience in a hardware store. Strong foundation in programming, database management, and web/android development. Seeking internship/entry-level position to apply technical skills, collaborate with teams, and contribute to organizational success.
              </p>
          <% } %>
        </div>

        <div class="row">
          <div class="col-lg-12 pt-4 pt-lg-0 content" data-aos="fade-left">
            <h3>UI/UX Designer &amp; Web Developer.</h3>
            <p class="fst-italic">
              
            </p>
            <div class="row">
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>19 Jan 2002</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>+245736621281</span></li>
                  <% if (user && user.location) { %>
                    <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span><%= user.location %></span></li>
                  <% } else { %>
                  <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>Nairobi, Kenya</span></li>
                  <% }  %>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>21</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span> Bachelor of Science in Applied Computing Technology</span></li>
                  <% if (user.emails && user.emails.length > 0) { %>
                    <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span><%= user.emails[0].value %></span></li>
                  <% } else { %>
                    <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>No email available</span></li>
                  <% } %>
                  
                </ul>
              </div>
            </div>
            <p>
              
            </p>
          </div>
        </div>

      </div>
    </section><!-- End About Section -->

    <!-- ======= Skills Section ======= -->
    <section id="skills" class="skills section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Skills</h2>
          <p>I possess a comprehensive skill set in programming languages, with a particular focus on proficiency in Python, C#, and C++. My expertise extends to database management, where I am adept at utilizing SQL*Plus. Additionally, I bring a solid understanding of web technologies, including HTML, CSS, and JavaScript. Leveraging my experience in software development, I have successfully developed native mobile applications using Java for the Android platform. This combination of programming languages, database management, and mobile application development reflects my commitment to staying abreast of evolving technologies and my ability to contribute effectively to diverse technical projects.</p>
        </div>

        <div class="row skills-content">
          <div class="col-lg-6" data-aos="fade-up">
            <% for (const [language, percentage] of languages) { %>
              <div class="progress">
                <span class="skill"><%= language %> <i class="val"><%= percentage.toFixed(2) %>%</i></span>
                <div class="progress-bar-wrap">
                  <div class="progress-bar" role="progressbar" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            <% } %>
          </div>
        </div>

      </div>
    </section><!-- End Skills Section -->


    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio section-bg">
      <div class="container">
        <div class="section-title">
          <h2>Portfolio</h2>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">
          <% if (repositories && repositories.length > 0) { %>
            <% repositories.forEach(repo => { %>
              <div class="col-lg-4 col-md-6 portfolio-item">
                <div class="">
                  <div class="card">
                    <div class="card-body">
                      <h3 class="card-title"><%= repo.name %></h3>
                      <p class="card-text"><%= repo.description %></p>
                      <!-- Display other repository details as needed -->
                      <a href="<%= repo.html_url %>" class="btn btn-primary" target="_blank">View Repository</a>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No repositories available.</p>
          <% } %>
        </div>
      </div>
    </section><!-- End Portfolio Section -->

    <div id="userData" data-user='<%- JSON.stringify(user) %>' style="display: none;"></div>

    <!-- Update your index.ejs to display GitHub events -->
    <section id="github-activity" class="github-activity">
      <div class="container">
        <div class="section-title">
          <h2>GitHub Activity</h2>
        </div>
        <div class="row">
          <div id="feed"></div>
        </div>
      </div>
    </section>



    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <h2>Contact</h2>
          <p></p>
        </div>

        <div class="row" data-aos="fade-in">

          <div class="col-lg-5 d-flex align-items-stretch">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>3rd Parklands, Nairobi, Kenya</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <% if (user.emails && user.emails.length > 0) { %>
                <p><%= user.emails[0].value %></p>
                <% } else { %>
                <p>No email available</p>
                <%}%>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>+254736621281</p>
              </div>

              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.889960753607!2d36.81989931534782!3d-1.2633680359990405!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x182f165eb5289ff7%3A0xf0d8c76c4f79c39c!2sParklands%2C%20Nairobi%2C%20Kenya!5e0!3m2!1sen!2ske!4v1539943755621
              " frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
            </div>

          </div>

          <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
            <form action="#" method="post" role="form" class="php-email-form">
              <div class="row">
                <div class="form-group col-md-6">
                  <label for="name">Your Name</label>
                  <input type="text" name="name" class="form-control" id="name" required>
                </div>
                <div class="form-group col-md-6">
                  <label for="name">Your Email</label>
                  <input type="email" class="form-control" name="email" id="email" required>
                </div>
              </div>
              <div class="form-group">
                <label for="name">Subject</label>
                <input type="text" class="form-control" name="subject" id="subject" required>
              </div>
              <div class="form-group">
                <label for="name">Message</label>
                <textarea class="form-control" name="message" rows="10" required></textarea>
              </div>
              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>
              <div class="text-center"><button type="submit">Send Message</button></div>
            </form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer">
    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong><span><%= user.login %></span></strong>
      </div>
    </div>
  </footer><!-- End  Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="assets/vendor/aos/aos.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="assets/vendor/typed.js/typed.umd.js"></script>
  <script src="assets/vendor/waypoints/noframework.waypoints.js"></script>
  
  <!-- Github Activity Plugin Dependencies -->
  <script type="text/javascript" src="https://unpkg.com/mustache@4.2.0/mustache.min.js"></script>
  <script type="text/javascript" src="https://unpkg.com/github-activity-feed@latest/dist/github-activity.min.js"></script>

  <!-- Main JS File -->
  <script src="assets/js/main.js"></script>

  <!-- Github Activity Plugin Initializing -->
  <script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
      const userDataElement = document.getElementById('userData');
      const userData = JSON.parse(userDataElement.getAttribute('data-user'));

      // Retrieve the username from the user object and initialize feeds
      if (userData) { 
        initializeFeeds(userData.login);
      }
      // Function to initialize feeds
      function initializeFeeds(username) {
        // GitHubActivity.feed for the "All" feed
        GitHubActivity.feed({
          username: username,
          repository: "",
          selector: "#feed",
          limit: 20,
          filter: function (event) {
            return true; // Display all events
          },
        });
      }
    });
  </script>

</body>

</html>